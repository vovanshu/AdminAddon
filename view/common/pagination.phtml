    <?php if ($currentPage != 1): ?>
        <?php echo $this->hyperlink('', $firstPageUrl, ['class' => 'previous o-icon-first button', 'title' => $translate('First'), 'aria-label' => $translate('First')]); ?>
        <?php echo $this->hyperlink('', $previousPageUrl, ['class' => 'o-icon-prev button', 'title' => $translate('Previous'), 'aria-label' => $translate('Previous')]); ?>
    <?php else: ?>
        <span class="previous o-icon-first button inactive"></span>
        <span class="o-icon-prev button inactive"></span>
    <?php endif; ?>

    <?php if ($currentPage < $pageCount): ?>
        <?php echo $this->hyperlink('', $nextPageUrl, ['class' => 'o-icon-next button', 'title' => $translate('Next'), 'aria-label' => $translate('Next')]); ?>
        <?php echo $this->hyperlink('', $lastPageUrl, ['class' => 'next o-icon-last button', 'title' => $translate('Last'), 'aria-label' => $translate('Last')]); ?>
    <?php else: ?>
        <span class="o-icon-next button inactive"></span>
        <span class="next o-icon-last button inactive"></span>
    <?php endif; ?>

    <?php
    $from = $offset + 1;
    $to = ($currentPage < $pageCount) ? $offset + $perPage : $totalCount;
    ?>
    <span class="row-count"><?php echo sprintf($translate('%1$sâ€“%2$s of %3$s'), $from, $to, $totalCount); ?></span>
<?php else: ?>
    <?php echo $translate('0 results'); ?>
<?php endif; ?>
